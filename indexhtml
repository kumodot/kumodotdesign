<body>
  <h1>My Products</h1>
  <div class="container">
    <!-- Product Card -->
    <div class="card">
      <img src="" alt="Product image">
      <h3>Product 1</h3>
      <p>Description of product 1</p>
      <p>$10.00</p>
      <button onclick="addToCart('Product 1', 10)">Add to Cart</button>
    </div>
    <!-- Duplicate this block for more products -->
    <div class="card">
      <img src="" alt="Product image">
      <h3>Product 2</h3>
      <p>Description of product 2</p>
      <p>$15.00</p>
      <button onclick="addToCart('Product 2', 15)">Add to Cart</button>
    </div>
    <!-- ... add more cards up to 6 -->
  </div>

  <div class="checkout">
    <h2>Checkout</h2>
    <label for="shipping">Choose destination:</label>
    <select id="shipping">
      <option value="USA">USA (+$10)</option>
      <option value="Europe">Europe (+$15)</option>
      <option value="Asia">Asia (+$20)</option>
      <option value="Australia">Australia (+$25)</option>
      <option value="Germany">Germany (+$12)</option>
    </select>
    <button onclick="checkout()">Buy Now</button>
  </div>

  <script>
    let cart = [];
    const shippingRates = {
      USA: 10,
      Europe: 15,
      Asia: 20,
      Australia: 25,
      Germany: 12
    };

    function addToCart(name, price) {
      cart.push({name, price});
      alert(name + " added to cart!");
    }

    function checkout() {
      if (cart.length === 0) {
        alert("Your cart is empty!");
        return;
      }
      let subtotal = cart.reduce((sum, item) => sum + item.price, 0);
      let destination = document.getElementById("shipping").value;
      let shipping = shippingRates[destination];
      let total = subtotal + shipping;

      alert("Subtotal: $" + subtotal +
            "\nShipping (" + destination + "): $" + shipping +
            "\nTotal: $" + total +
            "\nProceeding to PayPal...");
      
      // Example PayPal link (replace with your own)
      window.location.href = "https://www.paypal.com/paypalme/youraccount/" + total;
    }
  </script>
